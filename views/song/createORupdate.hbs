  <div class="row">
    <div class="col-md-8 offset-md-2" id="body-container">

      <h3>{{title}}</h3>

      {{#if updating}}
        <form action="/song/update/{{song._id}}" method="POST">
      {{else}}
        <form action="/song/create" method="POST">
      {{/if}}
      {{!-- <input type="hidden" name="_id"> --}}
        <fieldset>
          <div class="form-group">
            <label for="nameID">Name</label>
            <input type="text"  name="name" class="form-control {{#if song.nameError}}is-invalid{{/if}}" value="{{song.name}}" id="nameID" placeholder="Enter Name">
            <div class="text-danger">
              {{song.nameError}}
            </div>
          </div>
          <div class="form-group">
            <label for="imageID">Image</label>
            <input type="text" name="image" class="form-control" id="imageID" value="{{song.image}}" placeholder="Enter Image URL">
          </div>
          <div class="form-group">
            <label for="lyricsID">Lyrics</label>
            <textarea class="form-control {{#if song.lyricsError}}is-invalid{{/if}}" name="lyrics" id="lyricsID" rows="3" placeholder="Lyrics (min 30 characters)">{{song.lyrics}}</textarea>
            <div class="text-danger">
              {{song.lyricsError}}
            </div>
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </fieldset>
      </form>
      
    </div> 
  </div>

  <script>
      CKEDITOR.replace( 'lyrics' );
  </script> 